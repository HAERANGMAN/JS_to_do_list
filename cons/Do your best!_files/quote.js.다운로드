const quotes = [
  { quote: "줄리 밥값을 벌자", author: "해랑맨" },
  { quote: "푸껫 인형을 팔던 아이를 생각하자", author: "해랑맨" },
  { quote: "행복은 현재진행형이어야 한다", author: "해랑맨" },
  { quote: "미래를위해 현재를 희생하지 말자", author: "해랑맨" },
  { quote: "하고서 후회하자", author: "해랑맨" },
  { quote: "작은것에 만족하자", author: "해랑맨" },
  { quote: "매사에 감사하자", author: "해랑맨" },
  { quote: "출국장 같은 삶을 살자", author: "해랑맨" },
  { quote: "직업에 귀천은 있다", author: "해랑맨" },
  { quote: "남일도 내일처럼 기뻐하자", author: "해랑맨" },
];

const quote = document.querySelector("#quote span:first-child");
const author = document.querySelector("#quote span:last-child");

//랜덤 길이만큼 곱해서 리스트개수만큼 출력되게
const todaysQuote = quotes[Math.floor(Math.random() * quotes.length)];

quote.innerText = todaysQuote.quote;
author.innerText = todaysQuote.author;
